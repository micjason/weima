.car {
  padding: 40rpx;
  position:relative
}

.btn-wrapper {
  width:100%;
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.info {
  font-size: 36rpx;
}

.car-bg {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0,0,0,.6);
  color: #000000
}

.car-info {
  width: 80%;
  min-height: 500rpx;
  background: #ffffff;
}

.btn-box {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  text-align: center;
  background: #5B9BD5;
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  color: #ffffff;
  border-radius: 10rpx;
}